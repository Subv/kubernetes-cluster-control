{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "php-deploymentUNIQUEID"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "phpUNIQUEID"
      }
    },
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "phpUNIQUEID"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "phpUNIQUEID",
            "image": "subv/php-deployment:latest",
            "ports": [
              {
                "containerPort": 80,
                "name": "application"
              },
              {
                "containerPort": 3131,
                "name": "ide"
              }
            ],
            "env": [
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "MYSQLPASSWORD"
              },
              {
                "name": "MYSQL_SERVICE_HOST",
                "value": "mysql-serviceUNIQUEID"
              }
            ]
          }
        ]
      }
    }
  }
}